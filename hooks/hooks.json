{
  "description": "Three-layer core values reinforcement: full injection at session start, re-injection after compaction, brief reminder on every prompt",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/inject-values.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/inject-reminder.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
